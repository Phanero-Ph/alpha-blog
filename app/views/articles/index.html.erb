<h1>Articles Listing Page</h1>

<table>
    
    <tr>
        <th>TITLE</th>
        <th>DESCRIPTION</th>
        <th>AUTHOR</th>
        <th>ACTION</th>
    </tr>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= article.author %></td>
            <td>Placeholder</td>
        </tr>

    </tbody>
    <% end %>
</table>